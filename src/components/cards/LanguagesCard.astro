---
import Card from "../Card.astro";
import { getMyInfo } from "@/utils";
const my_info = await getMyInfo();
---

<Card title="LANGUAGES">
    {my_info.languages.map((language) => (
      <div class="grid-languages">
        <div>
          <div class="language-name">{language.name}</div>
          <div class="normal-text">{language.level_text}</div>
        </div>
        <div class="language-dots-container">
              <div
                class={`language-dot ${language.level_points >= 1 ? 'language-plus' : ''}`}
              ></div>
              <div
                class={`language-dot ${language.level_points >= 2 ? 'language-plus' : ''}`}
              ></div>
              <div
                class={`language-dot ${language.level_points >= 3 ? 'language-plus' : ''}`}
              ></div>
              <div
                class={`language-dot ${language.level_points >= 4 ? 'language-plus' : ''}`}
              ></div>
              <div
                class={`language-dot ${language.level_points >= 5 ? 'language-plus' : ''}`}
              ></div>
        </div>
      </div>
    ))}
</Card>
