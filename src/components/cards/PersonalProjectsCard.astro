---
import Card from "../Card.astro";
import { getCollection } from "astro:content";
const my_info = (await getCollection('myInfo'))[0].data;
---

  <Card title="PERSONAL PROJECTS">
    {my_info.personal_projects.map((project) => (
      <div class="project-site">
        <a target="_blank" class="project-link" href={project.site}>{project.site}</a>
      </div>
      <div class="personal-project-info">
        <div class="personal-project-info-title">About:&nbsp;</div>
        <div>{project.info}</div>
      </div>
      <div class="personal-project-info">
        <div class="personal-project-info-title">Tech used:&nbsp;</div>
        <div>{project.tech}</div>
      </div>

      <hr class="dashed-line" />
    ))}
  </Card>
