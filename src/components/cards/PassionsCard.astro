---
import Card from "../Card.astro";
import { getCollection } from "astro:content";
const my_info = (await getCollection('myInfo'))[0].data;
---

<Card title="PASSIONS">
    {my_info.passions.map((passion) => (
      <div>
        <i class="fa fa-heart fa-lg passion-icon"></i>
        &nbsp;
        <span class="font-weight-bold normal-text">{passion}</span>
      </div>
      <hr class="dashed-line" />
    ))}
</Card>
